<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>


<%= form_for @photo, html: {class: "form-horizontal"} do |f| %>
 <div class="form-group">
   <%= f.label :url, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
       <%= f.text_field :url, class: "form-control" %>
       </div>
  </div>
  <div class="form-group">
    <%= f.label :caption, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :caption, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rating, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :rating, class:"form-control" %>
    </div>
  </div>
  <% if @photo.new_record? %>
  <div class="form-group">
    <%= f.submit "Add photo", class:"col-sm-offset-2 col-sm-15, btn btn-default"%>
  <% else %>
    <%= f.submit "Save changes", class:"col-sm-offset-2 col-sm-15, btn btn-default"%>
  </div>
  <% end %>
<% end %>